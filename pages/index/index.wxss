/* pages/index/index.wxss */
.app-container{
  width: 100vw;
  height: 100vh;
  /* background-color: rgba(255, 0, 0, 0.3); */
  overflow: hidden;
}

.map-container{
  width: 100vw;
  height: 100vh;
  /* background-color: rgba(0, 0, 0, 0.2); */
  overflow: hidden;
}

.map{
  width: 100%;
  height: 100vh;
}

.top-in-container{
  width: 100vw;
  height: 50px;
  /* background-color: rgba(0, 0, 255, 0.2); */
  position: absolute;
  top: 15px;
  display: flex;
  align-items: center;
  justify-content:center;
}

.top-row-container{
  height: 100%;
  width: 95%;
  /* background-color: white; */
  border-radius: 10px;
}

.top-avatar-container{
  width: 50px;
  height: 50px;
  background-color: white;
  border-bottom-left-radius: 10px;
  border-top-left-radius: 10px;
  display: flex;
  align-items: center;
  justify-content:center;
}

.top-input-container{
  width: 100%;
  height: 50px;
  background-color: white;
  border-bottom-right-radius: 10px;
  border-top-right-radius: 10px;
  display: flex;
  align-items: center;
  justify-content:left;
}

.top-avatar-img{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: black;
  position: relative;
}

.top-input-search{
  height:48px;
  width: 99%;
  font-size: 20px;
  border-radius: 6px;
  /* position: relative; */
  /* border: black solid 1px; */
}

.top-input-search2{

  border-radius: 10px;
  background-color:black;
  /* position: relative; */
  /* border: black solid 1px; */
}





.bttom-right-in-container{
  position: absolute;
  bottom: 40px;
  right: 20px;
  /* background-color: rgba(255, 0, 255, 0.2); */
  display: flex;
  flex-direction: column;
  align-items: center;

}

.btn-scale-btn-container{
  width: 26px;
  height: 50px;
  position: relative
}

.btn-scale-text{
  font-size: 35px;
  position: relative;
  top:-14px;
}


.bttom-left-in-container{
  position: absolute;

  bottom: 40px;
  left: 20px;
  /* background-color: rgba(255, 0, 255, 0.2); */
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn-location{
  padding: 0;
  width: 50px;
  height: 50px;
}

.btn-location-icon{
  width: 26px;
  height: 50px;
  position: relative;
  top:0px;
}

.bottom-out-container{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 255, 0, 0.3);
}



